<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Movie_Details">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewDets"
        android:layout_width="395dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <RelativeLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/movieImageIDDets"
                android:background="@android:color/black"
                android:layout_width="90dp"
                android:layout_height="90dp" />

            <TextView
                android:id="@+id/movieTitleIDDets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/movieImageIDDets"
                android:paddingLeft="5dp"
                android:text="Movie Title"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/movieReleaseIDDets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/movieImageIDDets"
                android:padding="5dp"
                android:text="Release Date" />

            <TextView
                android:id="@+id/movieCatIDDets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/movieReleaseIDDets"
                android:layout_toEndOf="@+id/movieImageIDDets"
                android:padding="5dp"
                android:text="Category:" />

            <TextView
                android:id="@+id/movieRatingIDDets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/movieTitleIDDets"
                android:layout_toEndOf="@+id/movieImageIDDets"
                android:paddingLeft="5dp"
                android:text="Rating:" />

            <TextView
                android:id="@+id/runtimeDets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/movieReleaseIDDets"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="61dp"
                android:paddingLeft="5dp"
                android:text="Runtime:" />

            <TextView
                android:id="@+id/directedByDets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/runtimeDets"
                android:layout_below="@+id/movieReleaseIDDets"
                android:paddingLeft="5dp"
                android:text="Directed by:" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/relativeView"
        android:background="@color/cardview_light_background"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cardViewDets"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintVertical_bias="0.009"
        android:layout_width="370dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/actorsDets"
            android:text="Actors:"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/writerDets"
            android:text="Writers:"
            android:layout_below="@+id/actorsDets"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/plotDets"
            android:text="Plot:"
            android:layout_below="@+id/writerDets"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/boxOfficeDets"
            android:text="box office::"
            android:layout_below="@+id/plotDets"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>